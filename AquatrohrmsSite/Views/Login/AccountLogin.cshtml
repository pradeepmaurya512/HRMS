@model AquatrohrmsSite.Models.tblLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
<h2>Use a local account to log in.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.varLoginName)
                @Html.TextBoxFor(m => m.varLoginName)
                @Html.ValidationMessageFor(m => m.varLoginName)
            </li>
            <li>
                @Html.LabelFor(m => m.varPassword)
                @Html.PasswordFor(m => m.varPassword)
                @Html.ValidationMessageFor(m => m.varPassword)
            </li>
            
        </ol>
        <input type="submit" value="Log in" />
    </fieldset>
    <p>
        @Html.ActionLink("Add Employee", "AddEmployee") if you don't have an account.
    </p>
    
    
    
    
}
</section>

<section class="social" id="socialLoginForm">
    <h2>Use another service to log in.</h2>
@*    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })*@
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
