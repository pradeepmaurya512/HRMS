                                            <li>@Html.ActionLink("Add Employee", "EmployeeCreate", "Employee")</li>
                                            <li>@Html.ActionLink("Employee List", "EmployeeDetails", "Employee")</li>                                           
                                        </ul>
                                    </li>

                                    <li><a href="#">Client</a>
                                        <ul>
                                            <li>@Html.ActionLink("Add Client", "AddClient","Home")</li>
                                            <li>@Html.ActionLink("Client List", "_ClientList", "Home")</li>
                                            
                                        </ul>
                                    </li>
                                    <li><a href="#">Project  </a>
                                         <ul>
                                            <li>@Html.ActionLink("Add Project", "EmployeeCreate", "Employee")</li>
                                            <li>@Html.ActionLink("Project List", "EmployeeDetails", "Employee")</li>
                                            
