                                    <li><a href="#">Review Employee Goals</a></li>
                                    <li><a href="#">Client Feedback</a></li>
                                    <li><a href="#"> Employees Timesheet</a></li>
                                </ul>
                            </li>
                             <li><a href="#"> Recruitment</a>
                                <ul>
                                    <li><a href="#">Job Applications</a></li>
                                    <li><a href="#">New Vacancies</a></li>
                                    
                                </ul>
                            </li>
                            <li><a href="#">Account</a>
                                <ul>
                                    <li><a href="#">Sign Out</a></li>
                                    <li> @Html.ActionLink("Change Password", "ChangePassword", "Login")</a></li>

                                </ul>
                            </li>
                        </ul>     
                    </div>
              </div>
            </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - AQuatro HRMS </p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
